#:kivy 1.0.9

<Screen>:
    painter: painter

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    AsyncImage:
        allow_stretch: True
        source: "https://images-na.ssl-images-amazon.com/images/I/71yJA+kwzfL._UX250_.jpg"

    PaintWidget:
        id: painter
        size: root.size

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        Button
            size_hint: .1, .1
            text: "Clear"

            on_press: app.on_clear()
